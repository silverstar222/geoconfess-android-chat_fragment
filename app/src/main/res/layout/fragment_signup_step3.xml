<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_up_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footerheight"
        android:layout_alignParentBottom="true"
        android:src="@drawable/footerimage"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombtn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_password"
            style="@style/AppTheme.Widget.EditText.Helvetica"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreyText"
            android:hint="mot de passe"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/et_confirmpassword"
            style="@style/AppTheme.Widget.EditText.Helvetica"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreyText"
            android:hint="Confirmation mot de passe"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/default_padding_xlarge"
            android:layout_marginRight="@dimen/default_padding_xlarge"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/checkbox"></ImageView>

            <TextView
                android:id="@+id/forgotPasswordlabel"
                style="@style/AppTheme.Widget.TextView.Helvetica2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Recevoir une notification quand un prêtre
disponible se trouve dans un rayon de 2 km"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout

            android:id="@+id/picturebtn"
            style="@style/AppTheme.Widget.Button.adventpro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/attach"></ImageView>

            <TextView
                style="@style/AppTheme.Widget.TextView.Helvetica"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="JOINDRE"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                style="@style/AppTheme.Widget.TextView.Helvetica"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="MON"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                style="@style/AppTheme.Widget.TextView.Helvetica"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"

                android:text="CELEBRET"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            style="@style/AppTheme.Widget.TextView.Helvetica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Nous vous assurons de la confidentialité de ces données
qui ne seront ni publiées, ni cédées, ni vendues, et ne seront
utilisées que pour améliorer votre expérience utilisateur."
            android:textColor="@color/colorGreyText"
            android:textSize="13sp" />
    </LinearLayout>


    <Button
        android:id="@+id/bottombtn"
        style="@style/AppTheme.Widget.Button.Full"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_btn_selector"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="JE M'INSCRIS" />

</RelativeLayout>
