<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/actionbar_size"
    android:background="#f1f1f1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/headertext"
                style="@style/AppTheme.Widget.TextView"
                android:layout_marginTop="20dp"
                android:text="RÃ‰CURENCE"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_xxlarge"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headertext"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:id="@+id/checkspace1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/check1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Lundi"
                            android:textSize="18sp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkspace2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/check2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Mercedi"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/checkspace3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/check3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Vendredi"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/checkspace4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/check4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Dimanche"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:id="@+id/checkspace5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/check5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Mardi"
                            android:textSize="18sp">

                        </TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/checkspace6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/check6"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Jeudi"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/checkspace7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/check7"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/checkbox"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Samedi"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp">

                        </TextView>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/line2"
                android:layout_marginTop="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:gravity="center"


                    android:text="DE"
                    android:textColor="#d3d3d3" />

                <TextView
                    android:id="@+id/fromhour"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="#d3d3d3"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/drop1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdownarrow"></ImageView>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#d3d3d3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fromminute"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="#d3d3d3"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/drop2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdownarrow"></ImageView>
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:gravity="center"


                    android:text="Ã¡"
                    android:textColor="#d3d3d3" />

                <TextView
                    android:id="@+id/tohour"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="#d3d3d3"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/drop3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdownarrow"></ImageView>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:gravity="center"

                    android:text=":"

                    android:textColor="#d3d3d3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tominute"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="#d3d3d3"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/drop4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dropdownarrow"></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottombtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#a7a7a7"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add"

            ></ImageView>

        <TextView
            style="@style/AppTheme.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:text="AJOUTER"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xxlarge"
            android:textStyle="bold"

            />

        <TextView
            style="@style/AppTheme.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:text="UN"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_xxlarge"
            android:textStyle="normal"

            />

        <TextView
            style="@style/AppTheme.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:text="LIEU"
            android:textColor="@color/white"

            android:textSize="@dimen/font_size_xxlarge"
            android:textStyle="bold"

            />

    </LinearLayout>

</RelativeLayout>
